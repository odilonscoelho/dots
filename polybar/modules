[module/weatcher]
type = custom/ipc
hook-0 = echo " openweatcher off "
hook-1 = echo $(wq bar.weatcher)
initial = 2
click-left = wq weatcher start &
click-right = wq weatcher stop &
scroll-up = wq app.qute --target window "https://openweathermap.org/city/3451241"
scroll-down = wq app.qute --target window "https://openweathermap.org/city/3451241"
format-padding = 1
format-foreground = ${env:foreground}
format-background = ${env:background}
;format-underline = ${env:weatchercolor}
;format-overline = ${env:weatchercolor}
tail = true


[module/xkeyboard]
type = internal/xkeyboard
; List of indicators to ignore
format = "<label-layout><label-indicator>"
format-spacing = 1
format-padding = 1
format-prefix=${env:xkeyboardicon}
format-prefix-font=${env:xkeyboardfonticon}
format-prefix-foreground=${env:xkeyboardcoloricon}
format-foreground = ${env:foreground}
format-background = ${env:background}
;format-underline = ${env:xkeyboardcolor}
;format-overline = ${env:xkeyboardcolor}
label-layout = "%layout%"
label-layout-padding = 1
label-indicator = "%name%"
label-indicator-padding = 1
label-indicator-on-foreground = ${env:background}
label-indicator-on-background = ${env:foreground}
label-indicator-on = " %name% "
click-left = setxkbmap -model abnt2 -layout br -variant abnt2
click-right = setxkbmap -model us -layout us

[module/close]
type = custom/ipc
hook-0 = echo "%{T4}"
initial = 1
click-left = bspc node -c
click-right = bspc node -k
scroll-up =$(wq bsp.clearmodifiers && wq notificatime 5000 "ClearModifiers...")
scroll-down = $(wq bsp.clearmodifiers && wq notificatime 5000 "ClearModifiers...")
format-padding = 0
format-background = ${env:background}
format-foreground = #FF815B
;format-underline = ${env:colorgreen}
;format-overline = ${env:colorgreen}
tail = true

[module/floating]
