[module/mp]
type = custom/menu
expand-right = false
;format-suffix = "%{T5}%{F#569027}%{F-T1}" 
menu-0-0 = "%{T6}  %{T-}"
menu-0-0-exec = mp $(wq app.paste) &>/dev/null &
menu-0-1 = "%{T6}  %{T-}"
menu-0-1-exec = mp plistyad null &>/dev/null &
menu-0-2 = "%{T6}  %{T-}"
menu-0-2-exec = mp save &>/dev/null &
menu-0-3 = "%{T6}  %{T-}"
menu-0-3-exec = mp stop &>/dev/null &
menu-0-4 = "%{T6}  %{T-}"
menu-0-4-exec = mp select.file &>/dev/null &
menu-0-5 = "%{T6}  %{T-}"
menu-0-5-exec = mp prev &>/dev/null &
menu-0-6 = "%{T6}  %{T-}"
menu-0-6-exec = mp pause.toggle &>/dev/null &
menu-0-7 = "%{T6}  %{T-}"
menu-0-7-exec = mp next &>/dev/null &

label-open = " %{T5}%{F#569027}%{F-T1} " 
label-close = x
label-separator = |

format-padding = 0
format-background = ${colors.background}
format-foreground = ${colors.color8}
format-underline = ${colors.color8}
format-overline = ${colors.color8}