[module/quake]
type = custom/ipc
hook-0 = echo "%{T16}  îž•  %{T-}"
hook-1 = echo ""
initial = 1
format-padding = 10
format-background = ${env:color0}
format-foreground = ${env:background}
click-left = $(bspc rule -a Tilix state=floating focus=on; tilix -q && bspc rule -r Tilix:\*) &>/dev/null &
click-right = tilix -q &>/dev/null &
