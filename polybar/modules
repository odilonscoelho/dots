[module/bspwm]
type = internal/bspwm
pin-workspaces = true
inline-mode = true
enable-click = true
enable-scroll = true
reverse-scroll = false
fuzzy-match = false
ws-icon-default = %{T2}
ws-icon-0 = 1;%{T3}
ws-icon-1 = 2;%{T3}
ws-icon-2 = 3;%{T3}
ws-icon-3 = 4;%{T3}
ws-icon-4 = 5;%{T3}
ws-icon-5 = 6;%{T3}
ws-icon-6 = 7;%{T3}
ws-icon-7 = 8;%{T3}
ws-icon-8 = 9;%{T3}

format = <label-state>

label-focused = %icon%
label-focused-foreground = #ffffff
label-focused-background = #3f3f3f
label-focused-underline = #fba922

label-occupied = %icon%
label-occupied-underline = #555555

label-urgent = %icon%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-underline = #9b0a20

label-empty = %icon%
label-empty-foreground = #55

label-separator =
label-separator-padding = 1
label-separator-foreground = #ffb52a

[module/i3]
type = internal/i3
