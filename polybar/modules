hook-2 = wq gpuinfo start
hook-3 = wq gpuinfo stop
initial = 1
click-left = wq gpuinfo start
click-right = wq gpuinfo stop
format-foreground = ${env:foreground}
format-background = ${env:background}
;format-underline = ${env:gpuinfocolor}
;format-overline = ${env:gpuinfocolor}
format-padding = 1

[module/mpv]
type = custom/ipc
hook-1 = mp poly.title
hook-0 = mp poly.title off
initial = 2
double-click-left = mp select.file &>/dev/null & 
click-middle = mp select.file &>/dev/null & 
click-right = mp plistyad force &>/dev/null & 
click-left = mp controls &>/dev/null & 
scroll-down = mp next &
scroll-up = mp prev &
format-padding = 0
format-label-font = 0
format-background = ${env:background}
format-foreground = ${env:color2}
format-suffix = ${env:mprefixicon}
format-suffix-foreground=${env:mprefixcolor}
format-suffix-background=${env:color2}
format-suffix-font=${env:mprefixfont}
;format-underline = ${env:mcolor}
;format-overline = ${env:mcolor}

[module/mp]
type = custom/menu
expand-right = false
format-padding = 1
;format-underline = ${env:mprefixcolor}
;format-overline = ${env:mprefixcolor}
;format-background = ${env:color16}
;format-foreground = ${env:foreground}
menu-0-0 = "${env:mytlabel}"
menu-0-0-exec = mp $(wq app.paste) &>/dev/null &
menu-0-1 = "${env:mplistlabel}"
menu-0-1-exec = mp plistyad null &>/dev/null &
menu-0-2 = "${env:msavelabel}"
menu-0-2-exec = mp save &>/dev/null &
menu-0-3 = "${env:mremovelabel}"
menu-0-3-exec = mp stop &>/dev/null &
menu-0-4 = "${env:msflabel}"
menu-0-4-exec = mp select.file &>/dev/null &
menu-0-5 = "${env:mprevlabel}"
menu-0-5-exec = mp prev &>/dev/null &
menu-0-6 = "${env:mplaylabel}"
menu-0-6-exec = mp pause.toggle &>/dev/null &
menu-0-7 = "${env:mnextlabel}"
menu-0-7-exec = mp next &>/dev/null &

label-open = ${env:mopen}
label-close = ${env:mclose}
label-separator = |
