[module/ws]
type = custom/ipc
hook-0 = echo "%{T7}  %{F#848541}%{B#bfaf8b}$(</tmp/taskbar.workspace) %{T-}%{B-}"
initial = 1
scroll-up =$(bspc desktop next -f; polybar-msg hook ws 1)
scroll-down = $(bspc desktop prev -f; polybar-msg hook ws 1)
format-padding = 0
format-background = ${env:foreground}
format-foreground = ${env:color1}

