modules-right = title cmd floating close

monitor = HDMI-0
width = 100%
height = 30
override-redirect = false
fixed-center = true
scroll-up = bspc node -d next -f
scroll-down = bspc node -d prev -f
click-left = bspc node -f next
click-right = bspc node -f -c
click-middle = wq launch
module-margin = 1
padding-right = 8
