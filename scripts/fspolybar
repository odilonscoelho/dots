#!/bin/zsh
. icons
# A ordem em que as partiÃ§Ãµes sÃ£o especificadas definem a ordem que os $iconS e $colorFSIconS 
# correspondentes a cada partiÃ§Ã£o tem que ser informado
# Especificar as partiÃ§Ãµes que quer imprimir separadas por espaÃ§os;
partitionS=(/dev/sdb2 /dev/sda3)
# Especificar os Ã­cones em ordem com a $partitionS, separadas por espaÃ§os;
FSiconS=('îœ’'  'ïŸ‰') # îœ† ï„¾ ïŸ‰ î‰€ ï’ ïŸ ğŸ–´
# Especificar as cores em ordem com os $iconS, separadas por espaÃ§os;
#colorFSIconS=("$color10" "$color9")
# Espefificar as fontes que quer Usar, a polybar Ã© baseada em font-0
# para fonte-1 escolha "2";
fontFSIconS=("13" "12")
# Altere [ sed 's/'$HOME'//g ] por [ sed 's/\/home\/SeuUser//g ] 
base="$(df -h $partitionS[@] |awk '{print " "$6" "$5" "$3}'|sed '1d'|sed 's/\/home\/losao\///g')"

for (( i = 1; i <= $((${#FSiconS[@]})); i++ ))
{
	echo -ne " %{F${colorFSIconS[${i}]}}%{T${fontFSIconS[${i}]}}${FSiconS[$i]}%{F- T-}$(sed -n ''$i'p' <<< "$base") "
}
