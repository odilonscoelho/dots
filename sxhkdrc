# wm independent hotkeys
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
# bspwm hotkeys
# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}
# close and kill
super + {_,shift + }w
	bspc node -{c,k}
alt + q
  bspc node -c
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
super + ctrl + {1-9}
	bspc node -o 0.{1-9}
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
# close and kill
super + {_,shift + }w
	bspc node -{c,k}
alt + {_,shift +}  button3
	bspc node {-c,-k}
shift + Insert
	var=$(wq tradutor.sel) && wq notifica $var
ctrl + shift + Insert
	var=$(wq tradutor.sel) && wq msg "$var"
#Enviar Wndow focada para prox/ant desktop
super + control + {button4,button5}
	bspc node -d {next,prev}
#Circular nos desktops
shift + super + {button4,button5}
	bspc desktop -f  {next,prev}
#Flutuante ou Tiled
alt + {button4,button5,button8}
	bspc node -t {tiled,floating,fullscreen}
alt + {w,d,a}
	bspc node -t {tiled,floating,fullscreen}
# Personalizados
Print
	wq app.print.full
shift + Print
	wq app.print.cut
@XF86AudioLowerVolume
	pulsemixer --change-volume -1
@XF86AudioRaiseVolume
	pulsemixer --change-volume +1
@XF86Mail
	thunderbird
@XF86Explorer
	nemo
ctrl + shift + F10
	mp "$(wq app.paste)"
shift + F10
	mp controls
F10
	mp select.file
@shift + XF86HomePage
	qutebrowser -R --target window youtube.com.br
@shift + ctrl + XF86HomePage
	qutebrowser -R --target window spankbang.com
@XF86Calculator
	wq cca
@shift + XF86Calculator
	kitty
super + {v,c}
	pulsemixer {--change-volume +1,--change-volume -1}
alt + {x,z}
	pulsemixer {--change-volume +1,--change-volume -1}
#shift + Return
#	kitty
alt + space
	wq rofi.drun
button8
	wq rofi.drun
@button9
	xdotool keydown super
@super + @button8
	xdotool keyup super
@super + @button9
	xdotool keyup super	
ctrl + button 8
  $(wq bsp.clearmodifiers)
F1
	tdrop -w 940 -h 700 -y 400 -x 800 -s dropdown --wm bspwm kitty
shift + F1
	kitty && tdrop -w 940 -h 400 -y 500 -x 800 -s dropdown --wm bspwm current
F11
	wq cmd &
F12
	wq mn &
super + ctrl + c
	pkill picom
super + alt + c
	picom --config ~/hdbkp/dots/picom.conf --experimental-backends -b &
super + c
	wq picom
#ctrl + shift + Escape
	#kitty
super + Return
	kitty
super + alt + {Left,Right,Up,Down}
	bspc node -f --to-node {prev.local,next.local,next,prev}

super + d
	dunst &>/dev/null
shift + super +d
	pkill dunst
